{
  "name": "devevangelista",
  "version": "0.0.1",
  "repository": "https://github.com/devalexandre/tailwindcss-project.git",
  "author": "devalexandre <alexandre@indev.net.br>",
  "license": "MIT",
  "scripts": {
    "build": "preact build --template src/template.html",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch --template src/template.html",
    "lint": "eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/",
      "node_modules"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.2.6",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.8.0",
    "eslint-config-preact": "^1.1.4",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "postcss": "^8.3.2",
    "preact-cli": "^3.0.0",
    "preact-cli-tailwind": "^3.0.0",
    "sirv-cli": "1.0.3"
  },
  "dependencies": {
    "@material-tailwind/react": "^1.2.2",
    "preact": "^10.3.2",
    "preact-render-to-string": "^5.1.4",
    "tailwindcss": "^2.1.4"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
